{
  "compilerOptions": {
    "target": "ES2017",
    "baseUrl": ".", // ðŸ‘ˆ tells TypeScript that @ means "src/"
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
       "@/*": ["src/*"],     // Add this
      "@lib/*": ["lib/*"]   // Optional: allows @lib/utils as well
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
